<div class='container'>
	<div class='row justify-content-center'>
		<div class='col-6 mt-1'>
			<h1 class='text-center mt-3 mb-2'>{{user.name}}</h1>
			<p class='lead text-center'>{{user.email}}</p>
			<p class='lead text-center'>Followers:
				{{user.followers.length}}
				| Following:
				{{user.following.length}}</p>
			<div class='user-avatar'>
				<img class='img-avatar' src='{{user.profile_pic}}' alt='User avatar' />
			</div>
			<form action='/private' method='post' id='private-form' class='mt-4 mb-2'>
				<div class='form-group text-center'>
					<label class='switch' for='private'>Private</label>
					<label class='switch'>
						<input id='private' data-user="{{user.username}}" data-private="{{checked}}" type='checkbox'
							name='private' value='false' {{checked}} />
						<span class='slider round'></span>
					</label>
				</div>
			</form>
			<form action='/private' method='post' id='userEdit-form' class='mt-4 mb-2'>
				<div class='form-group'>
					<label for='name'>Name</label>
					<input type='text' class='form-control' id='name' name='name' value='{{user.name}}' />
				</div>

				<div class='form-group'>
					<label for='newpass'>New Password</label>
					<input type='password' class='form-control' id='newpass' placeholder='Enter your new password'
						name='password' />
				</div>
				<div class='form-group'>
					<label for='password'>Confirm Password</label>
					<input type='password' class='form-control' id='password' name='newpass'
						placeholder='Confirm your new password' />
				</div>

				<button type='submit' class='btn btn-danger'>Update Account Details</button>
			</form>
		</div>
	</div>
	<br>
	<div class="row justify-content-center mb-5">
		<div class="card w-50">
			<div class="card-body">
				<h2 class="card-title">Favourites</h2>
				{{#if user.favourites.length}}
				<ul class="list-group">
					{{#each user.favourites}}
					<li class="list-group-item d-flex justify-content-between align-items-start">
						<div class="ms-2 me-auto">
							<div class="fw-bold">{{this}}</div>
						</div>
						{{!-- <i class="bi bi-trash"></i> --}}
					</li>
					{{/each}}
				</ul>
				<br>
				<a href="/movies/all" class="btn btn-outline-danger">Watch Now</a>
				{{else}}
				<p>No Movies in Favourite List</p>
				{{/if}}
			</div>
			<hr>
			<div class="card-body">
				<h2 class="card-title">Watchlist</h2>
				{{#if user.watchlist.length}}
				<ul class="list-group">
					{{#each user.watchlist}}
					<li class="list-group-item d-flex justify-content-between align-items-start">
						<div class="ms-2 me-auto">
							<div class="fw-bold">{{this}}</div>
						</div>
						{{!-- <i class="bi bi-trash"></i> --}}
					</li>
					{{/each}}
				</ul>
				<a href="/movies/all" class="btn btn-outline-danger">Watch Now</a>
				{{else}}
				<p>No Movies in Watchlist</p>
				{{/if}}
			</div>
		</div>
	</div>
</div>